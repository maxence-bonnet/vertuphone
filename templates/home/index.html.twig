{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div>
    <h1>Accueil</h1>
    <h2>Total cumulé des stocks disponibles :  {{ totalStock }}</h2>
    <h2>En rupture :</h2>
    <table class="table table-responsive table-hover table-center table-bordered mb-0">
        <thead>
            <tr>
                <th>Marque</th>
                <th>Modèle</th>
            </tr>
        </thead>
        <tbody>
            {% for phone in stockoutPhones %}
                <tr>
                    <td>{{ phone.brand }}</td>
                    <td>{{ phone.model }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun téléphone en rupture de stock</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <hr>
    <div>
        <a href="{{ path('app_phone_index') }}" class="btn btn-primary">Voir la liste des téléphones</a>
        <a href="{{ path('app_phone_new') }}" class="btn btn-primary">Ajouter un téléphone</a>
        <a href="" class="btn btn-primary">Gérer les marques</a>
    </div>
</div>

{% endblock %}
