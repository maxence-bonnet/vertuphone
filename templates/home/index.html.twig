{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="container">
    <h1>Accueil</h1>
    <h2>Total cumulé des stocks disponibles :  {{ totalStock }}</h2>
    <h2>En rupture :</h2>
    <table class="table table-hover table-center table-bordered mb-0">
        <thead>
            <tr>
                <th>Marque</th>
                <th>Modèle</th>
            </tr>
        </thead>
        <tbody>
            {% for phone in stockoutPhones %}
                <tr>
                    <td>{{ formation.brand }}</td>
                    <td>{{ phone.model }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun téléphone en rupture de stock </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <hr>
    <div>
        <a class="btn btn-primary">Voir la liste des téléphones</a>
        <a class="btn btn-primary">Ajouter un téléphone</a>
    </div>
</div>
{% endblock %}
